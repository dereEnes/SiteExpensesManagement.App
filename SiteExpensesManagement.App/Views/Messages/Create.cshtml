@using Microsoft.AspNetCore.Identity
@using SiteExpensesManagement.App.Domain.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@using SiteExpensesManagement.App.Contracts.Dtos.Message
@model MessageForAddDto

<div class="col-md-8">
    <div class="card card-primary card-outline">
        <div class="card-header">
             <h3 class="card-title">Yeni Mesaj Oluştur.</h3>
             </div>
             <form asp-action="Create" asp-controller="Messages" method="post">
                   <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Header"></label>
                            <input asp-for="Header" class="form-control" placeholder="Başlık">
                            <span asp-validation-for="Header" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for=Content></label>
                            <textarea asp-for="Content" maxlength="250" id="compose-textarea" class="form-control" placeholder="Mesajınız..." style="height: 250px"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div> 
                   </div>
            <div class="card-footer p-1">
                <div class="float-right">
                    <button type="submit" asp-action="ForwardedMessages" class="btn btn-warning align-middle">Mesajlarım</button>
                        <button type="submit" class="btn btn-primary">Gönder</button>
                </div>
            </div>
            </form>
      </div>
</div>
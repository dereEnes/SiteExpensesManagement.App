@using SiteExpensesManagement.App.Contracts.Dtos.Apartments
@using SiteExpensesManagement.App.Domain.Enums
@model ApartmentForCreateDto

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Apartments" method="post">
            <h4>Yeni bir apartman dairesi oluştur.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ApartmentNo"></label>
                <input asp-for="ApartmentNo" class="form-control"/>
                <span asp-validation-for="ApartmentNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FloorNumber"></label>
                <input accept="number" asp-for="FloorNumber" class="form-control"/>
                <span asp-validation-for="FloorNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="Block" asp-items="Html.GetEnumSelectList<Blocks>()" class="form-control">
                    <option selected="selected" value="">Hangi blok</option>
                </select>  
                <span asp-validation-for="Block" class="text-danger"></span>  
            </div>
            <div class="form-group">
                <label asp-for="RoomTypeId">Oda Tipini seçiniz</label>
                @Html.DropDownListFor(m => m.RoomTypeId, new SelectList(ViewBag.RoomTypes, "Value","Text"), new { @class="form-control"})
                <span asp-validation-for="RoomTypeId" class="text-danger"></span>  
            </div>
            <div class="form-group">
                <label asp-for="UserId">Kullanıcıyı seçiniz</label>
                @Html.DropDownListFor(m => m.UserId, new SelectList(ViewBag.Users, "Value","Text"), new { @class="form-control"})
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
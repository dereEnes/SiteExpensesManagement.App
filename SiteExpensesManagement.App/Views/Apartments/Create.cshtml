@using SiteExpensesManagement.App.Domain.Enums
@model SiteExpensesManagement.App.Contracts.Dtos.Apartment.ApartmentForCreateDto

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Apartments" method="post">
            <h4>Yeni bir apartman dairesi oluştur.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ApartmentNo"></label>
                <input asp-for="ApartmentNo" class="form-control"/>
                <span asp-validation-for="ApartmentNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FloorNumber"></label>
                <input accept="number" asp-for="FloorNumber" class="form-control"/>
                <span asp-validation-for="FloorNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="Block" asp-items="Html.GetEnumSelectList<Blocks>()" size="5" multiple class="form-control">
                    <option selected="selected" value="">Hangi blok</option>
                </select>  
                <span asp-validation-for="Block" class="text-danger"></span>  
            </div>
            <div class="form-group">
                @*<select asp-for="UserId" class="form-control">
                    @foreach (var item in ViewBag.Users)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                    
                </select>*@
                @Html.DropDownListFor(m => m.UserId, new SelectList(ViewBag.Users, "Value","Text"))
                <span asp-validation-for="UserId" class="text-danger"></span>  
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

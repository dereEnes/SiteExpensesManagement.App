@using SiteExpensesManagement.App.Domain.Enums
@model SiteExpensesManagement.App.Contracts.ViewModels.Apartments.ApartmentViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2 class="mt-2 mb-1">Güncelle</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Apartments" method="post">
            <h4>Apartmanı güncelle</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ApartmentNo">Daire Numarası</label>
                <input asp-for="ApartmentNo" class="form-control"/>
                <span asp-validation-for="ApartmentNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FloorNumber">Kaçıncı Kat</label>
                <input accept="number" asp-for="FloorNumber" class="form-control"/>
                <span asp-validation-for="FloorNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Block">Blok Seçiniz</label>
                <select asp-for="Block" asp-items="Html.GetEnumSelectList<Blocks>()" class="form-control">
                    <option selected="selected" value="">Hangi blok</option>
                </select>  
                <span asp-validation-for="Block" class="text-danger"></span>  
            </div>
            <div class="form-group">
                <label asp-for="RoomType.Id">Oda Tipini seçiniz</label>
                @Html.DropDownListFor(m => m.RoomType.Id, new SelectList(ViewBag.RoomTypes, "Value","Text",@Model.RoomType.CountOfRooms), new { @class="form-control"})
                <span asp-validation-for="RoomType.Id" class="text-danger"></span>  
            </div>
            <div class="form-group">
                <label asp-for="User.Id">Kullanıcıyı seçiniz</label>
                @Html.DropDownListFor(m => m.User.Id, new SelectList(ViewBag.Users, "Value","Text"), new { @class="form-control"})
                <span asp-validation-for="User.Id" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-warning">Güncelle</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary mt-2-">Listeye Geri Dön</a>
</div>
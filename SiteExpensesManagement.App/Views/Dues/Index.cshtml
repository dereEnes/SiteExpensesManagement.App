@using SiteExpensesManagement.App.Contracts.ViewModels.Dues
@model List<DuesViewModel>

<h1>Aidatlar</h1>

<table class="table table-striped table-dark text-center">
    <thead>
        <tr>
            <th>Apartman Numarası</th>
            <th>Blok</th>
            <th>Yıl</th>
            <th>Ay</th>
            <th>Tutar</th>
            <th>Durum</th>
        </tr>
    </thead>
    <tbody>
        @foreach (DuesViewModel dues in Model)
        {
            <tr>
            <td>@dues.Apartment.ApartmentNo</td>
            <td>@dues.Apartment.Block.ToString()</td>
            <td>@dues.Year</td>
            <td>@dues.Month.ToString()</td>
            <td>@dues.Price <i class="fa-solid fa-turkish-lira-sign"></i></td>
                
                @if (@dues.IsPayed)
               {
                    <td class="text-success">ÖDENDİ</td>
                }
                else
                {
                    <td class="text-warning">ÖDENMEDİ</td>
                }
            </tr>   
        }
    </tbody>
    <tfoot></tfoot>
</table>
<script src="https://kit.fontawesome.com/7dd7b28160.js" crossorigin="anonymous"></script>

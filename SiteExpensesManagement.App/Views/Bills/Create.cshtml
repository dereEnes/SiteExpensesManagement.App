@using SiteExpensesManagement.App.Contracts.Dtos.Bills
@using SiteExpensesManagement.App.Domain.Enums
@model BillForAddDto


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Bills" method="post">
            <h4>Yeni Fatura Oluştur</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Category">Fatura Türü</label>
                <select asp-for="Category" asp-items="Html.GetEnumSelectList<BillTypes>()" class="form-control">
                </select>  
                <span asp-validation-for="Category" class="text-danger"></span>  
            </div>
            <div class="form-group">
                <label asp-for="Price">Ücret</label>
                <input asp-for="Price" class="form-control"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpiryDate">Son Ödeme Tarihi</label>
                <input asp-for="ExpiryDate" class="form-control"/>
                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Month">Hangi ayın faturası</label>
                <select asp-for="Month" asp-items="Html.GetEnumSelectList<Months>()" class="form-control">
                </select>  
                <span asp-validation-for="Month" class="text-danger"></span>  
            </div>
            <div class="form-group">
                <label asp-for="Target">Ekleme Yöntemi</label>
                <select asp-for="Target" asp-items="Html.GetEnumSelectList<Targets>()" class="form-control">
                </select>  
                <span asp-validation-for="Target" class="text-danger"></span>  
            </div>
            <div class="form-group">
                <label asp-for="ApartmentNo">Apartman Numarası</label>
                <input type="number" asp-for="ApartmentNo" class="form-control"/>
                <span asp-validation-for="ApartmentNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Block">Blok</label>
                <select asp-for="Block" asp-items="Html.GetEnumSelectList<Blocks>()" class="form-control">
                </select>  
                <span asp-validation-for="Block" class="text-danger"></span>  
            </div><button type="submit" class="btn btn-primary">Oluştur</button>
        </form>
    </div>
</div>

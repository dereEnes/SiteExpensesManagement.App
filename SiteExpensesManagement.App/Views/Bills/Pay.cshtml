@using SiteExpensesManagement.App.Domain.Entities
@model CreditCard

<link rel="stylesheet" src="~/css/payment.css"/>
<div class="container p-0">
    <div class="card px-4">
        <form asp-action="Pay" asp-controller="Bills" method="post">
        <p class="h8 py-3">Ödeme Detayları</p>
        <div class="row gx-3">
            <div class="col-12">
                <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
                <div class="d-flex flex-column">
                    <p class="text mb-1">Kart Üzerindeki İsim</p>
                    <input asp-for="NameOnCard" class="form-control mb-3" type="text" placeholder="Ad Soyad">
                    <span asp-validation-for="NameOnCard" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12">
                <div class="d-flex flex-column">
                    <p class="text mb-1">Kart Numarası</p>
                    <input asp-for="CardNumber" class="form-control mb-3" type="number" placeholder="1234 5678 435678">
                    <span asp-validation-for="CardNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="col-4">
                <div class="d-flex flex-column">
                    <p class="text mb-1">Son Kullanma Ayı</p>
                    <input asp-for="ExpiryMonth" class="form-control mb-3" type="number" placeholder="MM">
                    <span asp-validation-for="ExpiryMonth" class="text-danger"></span>
                </div>
            </div>
            <div class="col-4">
                <div class="d-flex flex-column">
                    <p class="text mb-1">Son kullanma Yılı</p> 
                    <input asp-for="ExpiryYear" class="form-control mb-3" type="number" placeholder="YYYY">
                    <span asp-validation-for="ExpiryYear" class="text-danger"></span>
                </div>
            </div>
            <div class="col-4">
                <div class="d-flex flex-column">
                    <p class="text mb-1">CVV/CVC</p>
                    <input asp-for="Cvv" class="form-control mb-3 pt-2" type="number" placeholder="000">
                    <span asp-validation-for="Cvv" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12">
                    <button type="submit" class="ps-3 mb-3 btn btn-primary">Öde  @if (!(ViewBag.Bill is null)) {@ViewBag.Bill.Price }<i class="fa-solid fa-turkish-lira-sign"></i></button>
                </div>
            <div class="col-12">
                @if(!(ViewBag.Cards is null)){
                        @foreach (var item in ViewBag.Cards)
                        {
                            <input type="radio" value="@item.CardNumber"/>
                        }
                    }
                </div>
        </div>
        </form>
    </div>
</div>

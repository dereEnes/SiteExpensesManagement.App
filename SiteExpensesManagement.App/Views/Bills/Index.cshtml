@using SiteExpensesManagement.App.Contracts.ViewModels.Bills
@model List<BillViewModel>


<h1>Faturalar</h1>

<table class="table table-striped table-dark text-center">
    <thead>
        <tr>
            <th>Apartman Numarası</th>
            <th>Blok</th>
            <th>Fatura Tipi</th>
            <th>Yıl</th>
            <th>Ay</th>
            <th>Tutar</th>
            <th>Son Ödeme Tarihi</th>
            <th>Durum</th>
        </tr>
    </thead>
    <tbody>
        @foreach (BillViewModel bill in Model)
        {
            <tr>
            <td>@bill.Apartment.ApartmentNo</td>
            <td>@bill.Apartment.Block.ToString()</td>
            <td>@bill.Category.ToString()</td>
            <td>@bill.Year</td>
            <td>@bill.Month.ToString()</td>
            <td>@bill.Price <i class="fa-solid fa-turkish-lira-sign"></i></td>
                @if (@bill.ExpiryDate > DateTime.Now)
                {
                    <td class ="text-danger">@bill.ExpiryDate.ToString("dd:MM:yyyy")</td>
                }
                else
                {
                    <td>@bill.ExpiryDate.ToString("dd:MM:yyyy")</td>
                }
                @if (@bill.IsPayed)
               {
                    <td class="text-success">ÖDENDİ</td>
                }
                else
                {
                    <td class="text-warning">ÖDENMEDİ</td>
                }
            </tr>   
        }
    </tbody>
    <tfoot></tfoot>
</table>
<script src="https://kit.fontawesome.com/7dd7b28160.js" crossorigin="anonymous"></script>
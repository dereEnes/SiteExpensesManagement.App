@using SiteExpensesManagement.App.Domain.Entities
@model List<BillPayment>

<h1>Geçmiş Ödemelerim</h1>
<table class="table table-striped table-active mt-3">
    <thead>
        <tr>
            <th>Fatura Tipi</th>
            <th>Ay</th>
            <th>Yıl</th>
            <th>Tutar</th>
            <th>Ödeme Günü</th>
        </tr>
    </thead>
    <tbody>
        @foreach (BillPayment payment in Model)
        {
         <tr>
            <td>@payment.Bill.Category</td>
            <td>@payment.Bill.Month</td>
            <td>@payment.Bill.Year</td>
            <td>@payment.Bill.Price <i class="fa-solid fa-turkish-lira-sign"></td>
            <td>@payment.CreatedAt.ToShortDateString()</td>
            
        </tr>   
        }
    </tbody>
    <tfoot></tfoot>
</table>
<script src="https://kit.fontawesome.com/7dd7b28160.js" crossorigin="anonymous"></script>